@using ECommerceApp7.Models
@model IEnumerable<ECommerceApp7.Models.Cart>

@{
    ViewBag.Title = "cart";

}

<h2>Your Shopping Cart</h2>

<table class="table">
    <tr>
        <th>
            <p>Name</p>
        </th>
        <th>
            <p>SKU Number</p>
        </th>
        <th>
            <p>Price</p>
        </th>
        <th>
            <p>Category</p>
        </th>
        <th>
            <p>Date Added</p>
        </th>
        <th>
            <p>Quantity</p>
        </th>
    </tr>

    @{
        if ((List<Cart>)Session["cart"] != null)
        {
            foreach (Cart cart in (List<Cart>)Session["cart"])
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => cart.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => cart.SkuNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => cart.Price)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => cart.CategoryName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => cart.DateAdded)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => cart.ItemQuantity)
                    </td>
                    <td></td>
                </tr>
            }
        }
      
        
        foreach (var cart in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => cart.ItemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => cart.SkuNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => cart.Price)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => cart.CategoryName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => cart.DateAdded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => cart.ItemQuantity)
                </td>
                <td></td>
            </tr>
        }
        }
    
</table>
